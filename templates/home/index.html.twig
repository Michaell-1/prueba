{% extends 'base.html.twig' %}

{% block title %}Perfil de Usuario{% endblock %}



{% block body %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
{% endblock %}

<di>
    <!-- Tarjeta de Perfil-->
    <div class="profile-card">
        <h2>Información del Usuario</h2>
        <div class="field">
            <span>Nombre:</span> {{ app.user.persona.nombres }}
        </div>
        <div class="field">
            <span>Apellidos:</span> {{ app.user.persona.apellidos }}
        </div>
        <div class="field">
            <span>Dirección:</span> {{ app.user.persona.direccion }}
        </div>
        <div class="field">
            <span>Edad:</span> {{ app.user.persona.edad }}
        </div>
        <div class="field">
            <span>Género:</span> {{ app.user.persona.genero }}
        </div>
        <div class="field">
            <span>Cédula:</span> {{ app.user.persona.cedula }}
        </div>
            <div class="field">
            <span>Celular:</span> {{ app.user.persona.celular }}
        </div>
    </div>

    <!-- FILTROS Y BÚSQUEDA -->
    <div class="filtro">
        <input type="text" id="search" placeholder="Buscar ofertas..." />
        <select id="filter-type">
            <option value="">Tipo de contrato</option>
            <option value="indefinido">Indefinido</option>
            <option value="temporal">Temporal</option>
        </select>
        <select id="filter-canton">
            <option value="">Cantón</option>
            <option value="quito">Quito</option>
            <option value="guayaquil">Guayaquil</option>
        </select>
    </div>
</div>

{% endblock %}
