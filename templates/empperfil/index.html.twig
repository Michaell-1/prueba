{% extends 'base.html.twig' %}

{% block title %}Hello EmpperfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="Busquedaempresa">

    <div class="filtro">
        <input type="text" id="search" placeholder="Buscar ofertas..." />
        <select id="filter-type">
            <option value="">Tipo de contrato</option>
            <option value="indefinido">Indefinido</option>
            <option value="temporal">Temporal</option>
        </select>
        <select id="filter-canton">
            <option value="">Cantón</option>
            <option value="quito">Quito</option>
            <option value="guayaquil">Guayaquil</option>
        </select>
    </div>

    <div data-controller="job-list">
    <h3>Ofertas de Trabajo</h3>
    <div id="jobOffers"></div>
    </div>

    <div class="Perfilempresa">
        <ul>
            {% for empresa in empresas %}
                <li>{{ empresa.nombre }}</li>
            {% endfor %}
            {% for empresa in empresas %}
                <li>{{ empresa.dueño }}</li>
            {% endfor %}
            {% for empresa in empresas %}
                <li>{{ empresa.ubicacion }}</li>
            {% endfor %}
            {% for empresa in empresas %}
                <li>{{ empresa.contacto }}</li>
            {% endfor %}
            {% for empresa in empresas %}
                <li>{{ empresa.ruc }}</li>
            {% endfor %}
            {% for empresa in empresas %}
                <li>{{ app.user.email }}</li>
            {% endfor %}
        </ul>
        
    </div>
    
</div>
{% endblock %}
