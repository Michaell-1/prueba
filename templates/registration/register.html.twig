{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}



{% block body %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}
<div class="register-container">
    <h1 class="h3 mb-3">Register</h1>

    {{ form_start(registrationForm) }}

        <div class="form-group">
            {{ form_row(registrationForm.nombres) }}
        </div>

        <div class="form-group">
            {{ form_row(registrationForm.apellidos) }}
        </div>

        <div class="form-group">
            {{ form_row(registrationForm.genero) }}
        </div>

        <div class="form-group">
            {{ form_row(registrationForm.edad) }}
        </div>

        <div class="form-group">
            {{ form_row(registrationForm.direccion) }}
        </div>

        <div class="form-group">
            {{ form_row(registrationForm.cedula) }}
        </div>

        <div class="form-group">
            {{ form_row(registrationForm.email) }}
        </div>

        <div class="form-group">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Contraseña'
            }) }}
        </div>

        <button type="submit" class="btn btn-primary btn-block">Register</button>

    {{ form_end(registrationForm) }}

    <p class="mt-3">
        ¿Ya tienes una cuenta? <a href="{{ path('app_login') }}">Iniciar Sesión</a>
    </p>
</div>
{% endblock %}

